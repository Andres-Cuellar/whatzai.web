    </div>

    <!-- Extras -->
    <div class="max-w-3xl mx-auto mt-16 bg-gray-50 rounded-2xl p-8">
      <h3 class="text-2xl font-bold mb-6 text-center">
        Servicios adicionales disponibles
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-4 bg-white rounded-xl shadow-sm">
          <h4 class="font-bold mb-2">Línea WhatsApp extra</h4>
          <p class="text-gray-600 mb-2">Amplía tu capacidad de atención</p>
          <p class="text-lg font-bold text-primary-600">+$15 USD/mes</p>
        </div>
        <div class="p-4 bg-white rounded-xl shadow-sm">
          <h4 class="font-bold mb-2">Canal adicional</h4>
          <p class="text-gray-600 mb-2">Instagram o Facebook</p>
          <p class="text-lg font-bold text-primary-600">+$30 USD/mes</p>
        </div>
        <div class="p-4 bg-white rounded-xl shadow-sm">
          <h4 class="font-bold mb-2">Implementaciones IA</h4>
          <p class="text-gray-600 mb-2">Automatización avanzada</p>
          <p class="text-lg font-bold text-primary-600">desde $200 USD</p>
        </div>
      </div>
    </div>

    <div class="mt-12 text-center">
      <a href="#automatizaciones" class="btn btn-outline">
        Ver opciones de automatización
      </a>
    </div>
  </div>
</section>
